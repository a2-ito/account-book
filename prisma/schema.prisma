// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "sqlite"
  // url      = env("DATABASE_URL")
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Project {
  id           String  @id
  name         String?
  userProjects UserProject[]
  accounts     Account[]
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
}

model User {
  id           String  @id
  email        String  @unique
  name         String?
  userProjects UserProject[]
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
}

model UserProject {
  User      User     @relation(fields: [userId], references: [id])
  userId    String
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  @@id([userId, projectId])
}

model Account {
  id         Int     @id @default(autoincrement())
  amount     Int
  typeId     Int // 1: income, 2: expense
  categoryId Int
  memo       String?
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  String
  dateOfUse  DateTime @default(now())
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  deletedAt  DateTime?
}

model Category {
  id   Int     @id @default(autoincrement())
  name String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
